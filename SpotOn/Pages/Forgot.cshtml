<div id="menu-reset" class="menu menu-box-bottom rounded-m"
     data-menu-height="330"
     data-menu-effect="menu-over">
    <div class="menu-title">
        <h1 class="font-24">Reset Password</h1>
        <a href="#" class="close-menu"><i class="fa fa-times-circle"></i></a>
    </div>

    <div class="content mb-0 mt-0">
        <div class="input-style has-icon input-style-1 input-required">
            <i class="input-icon fa fa-lock font-11"></i>
            <span>Password</span>
            <em>(required)</em>
            <input type="password" id="new-password" placeholder="New Password">
        </div>
        <div class="input-style has-icon input-style-1 input-required">
            <i class="input-icon fa fa-lock font-11"></i>
            <span>Confirm Password</span>
            <em>(required)</em>
            <input type="password" id="cnf-password" placeholder="Password Confirmation">
        </div>

        <a href="javascript:changePassword();" class="btn btn-full btn-m shadow-l rounded-s font-600 bg-green-dark mt-4">Change Password</a>
    </div>
</div>

