@page
@model MeetSpotOn.Pages.ForgotModel
@{
}

<div class="page-content header-clear-medium">

    <div class="card card-style">
        <div class="content">
            <p class="font-600 color-highlight mb-n1">Reset Account</p>
            <h1 class="font-30">Forgot</h1>
            <p>
                Enter your email addresse below and we'll send you the reset Instruction Code.
            </p>
            <p>
                Already have an instruction code? <a href="#" data-menu="menu-instruction-code" class="color-highlight"> Click here</a>
            </p>

            <div class="input-style has-icon input-style-1 input-required">
                <i class="input-icon fa fa-at"></i>
                <span>Email</span>
                <em>(required)</em>
                <input type="name" id="confirm-email-address" placeholder="Email">
            </div>

            <a href="javascript:sendInstructionCode();" class="btn btn-full btn-l font-600 font-13 gradient-highlight mt-4 rounded-s">Send Reset Instructions</a>

            <div class="row pt-3 mb-0">
                <div class="col-6 text-left">
                    <a href="/login" class="color-highlight">Sign In</a>
                </div>
                <div class="col-6 text-right">
                    <a href="/userselect" class="color-highlight">Create Account</a>
                </div>
            </div>

        </div>
    </div>

</div>


<div id="snackbar-9" class="snackbar-toast color-white bg-highlight color-white" data-autohide="true"><i class="fa fa-sync fa-spin mr-3"></i>Processing...</div>

<div id="menu-instruction-code" class="menu menu-box-bottom rounded-m"
     data-menu-height="250"
     data-menu-effect="menu-over">
    <div class="menu-title">
        <p class="color-highlight">Let's get you into your account,</p>
        <h1 class="font-24">Instruction Code</h1>
        <a href="#" class="close-menu"><i class="fa fa-times-circle"></i></a>
    </div>

    <div class="content mt-0 mb-0">
        <div class="input-style has-icon input-style-1 input-required mb-4">
            <i class="input-icon fa fa-code"></i>
            <span>Instruction Code</span>
            <em>(required)</em>
            <input type="name" id="instruction-code" placeholder="Enter Instruction Code">
        </div>
        <a href="javascript:validateInstructionCode();" class="btn btn-full btn-m shadow-l rounded-s bg-highlight font-600 top-20">VALIDATE INSTRUCTION CODE</a>
    </div>
</div>


