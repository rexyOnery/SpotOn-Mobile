@page
@model MeetSpotOn.Pages.ForgotModel
@{
}

<div class="page-content header-clear-medium">

    <div class="card card-style">
        <div class="content">
            <p class="font-600 color-highlight mb-n1">Reset Account</p>
            <h1 class="font-30">Forgot</h1>
            <p>
                Answer the question below and we'll send you the reset Instruction Code.
            </p>
            <p>
                Already have an instruction code? <a href="#" data-menu="menu-instruction-code" class="color-highlight"> Click here</a>
            </p>

            <div class="input-style has-icon input-style-1 input-required">
                <i class="input-icon fa fa-at"></i>
                <span>User Name</span>
                <em>(required)</em>
                <input type="name" id="confirm-email-address" placeholder="User Name">
            </div>

            <div class="input-style has-icon input-style-1 input-required">
                <i class="input-icon"></i>
                <span>Select Your Secret Question</span>
                <select id="secretquestion">
                    <option value="What is your mother's maiden name?"> What is your mother's maiden name?</option>
                    <option value="What was your first pet?"> What was your first pet?</option>
                    <option value="What was the model of your first car?"> What was the model of your first car?</option>
                    <option value="In what city were you born?"> In what city were you born?</option>
                    <option value="What was your father's middle name?"> What was your father's middle name?</option>
                    <option value="What was your childhood nickname?"> What was your childhood nickname?</option>
                </select>
            </div>
            <div class="input-style has-icon input-style-1 input-required">
                <i class="input-icon fa fa-angle-right"></i>
                <span>Secret Answer</span>
                <em>(required)</em>
                <input type="name" id="answer" placeholder="Secret Answer">
            </div>
            <div id="load_spinner" style="float:right" class="spinner-border mb-4 mr-4 color-green-dark hidden" role="status">
                <span class="sr-only">Loading...</span>
            </div>
            <a href="javascript:sendInstructionCode();" id="in_Code" class="btn btn-full btn-l font-600 font-13 gradient-highlight mt-4 rounded-s">Send Reset Instructions</a>

            <div class="row pt-3 mb-0">
                <div class="col-6 text-left">
                    <a href="/login" class="color-highlight">Sign In</a>
                </div>
                <div class="col-6 text-right">
                    <a href="/userselect" class="color-highlight">Create Account</a>
                </div>
            </div>

        </div>
    </div>

</div>


<div id="snackbar-9" class="snackbar-toast color-white bg-highlight color-white" data-autohide="true"><i class="fa fa-sync fa-spin mr-3"></i>Processing...</div>

<div id="menu-instruction-code" class="menu menu-box-bottom rounded-m"
     data-menu-height="300"
     data-menu-effect="menu-over">
    <div class="menu-title">
        <p class="color-highlight">Let's get you into your account. <br/>Check your email for the</p>
        <h1 class="font-24">Instruction Code</h1>
        <a href="#" class="close-menu"><i class="fa fa-times-circle"></i></a>
    </div>

    <div class="content mt-0 mb-0">
        <div class="input-style has-icon input-style-1 input-required mb-4">
            <i class="input-icon fa fa-code"></i>
            <span>Instruction Code</span>
            <em>(required)</em>
            <input type="name" id="instruction-code" placeholder="Enter Instruction Code">
        </div>

        <div id="load_instruction" style="float:right" class="spinner-border mb-4 mr-4 color-green-dark hidden" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <div id="msg" class="hidden"></div>
        <a href="javascript:validateInstructionCode();" id="vCode" class="btn btn-full btn-m shadow-l rounded-s bg-highlight font-600 top-20">VALIDATE INSTRUCTION CODE</a>
    </div>
</div>


