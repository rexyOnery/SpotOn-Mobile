<div class="page-content">

    <div class="card card-style bg-28" data-card-height="40vh" id="bg_img">
        <div class="card-top">
            <a href="/artisan/photo" class="btn btn-s border-white color-white float-right mt-2 mr-2 rounded-sm"><i class="fa fa-camera pr-2"></i>Upload </a>
        </div>
        <div class="card-bottom ml-3 mr-3">
            <h1 class="font-40 line-height-xl color-white"><span id="f_name">My</span><br><span id="l_name">Name</span></h1>
            <p class="color-white opacity-60"><i class="fa fa-map-marker mr-2"></i><span id="dash_location">My Location</span></p>
            <p class="color-white opacity-80 font-15" id="dash_description">
                Jane loves listening to really loud music, hanging  out with friends and partying on the weeends!
            </p>
            <div id="procreate" style="float:right" class="spinner-border mb-4 mr-4 color-green-dark" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <div class="card-overlay bg-gradient"></div>
    </div>
    
    <div class="card card-style">
        <div class="content">
            <h4>Galleries from Past Jobs</h4>
            <p>Display all previous works that you have done. Maximum is 4</p>
            <div class="row" id="gallery_containera">
                <div class='col-6 hidden' id="h_6">
                    <a href='#' data-menu='menu-option-6'><img id="pix_6" src="" width='300' height='330' class='img-fluid rounded-sm shadow-xl'></a>
                </div>
                <div class='col-6 hidden' id="h_7">
                    <a href='#' data-menu='menu-option-7'><img id="pix_7" width='300' height='330' class='img-fluid rounded-sm shadow-xl'></a>
                </div>
                <div class='col-6 hidden' id="h_8">
                    <a href='#' data-menu='menu-option-8'><img id="pix_8" width='300' height='330' class='img-fluid rounded-sm shadow-xl'></a>
                </div>
                <div class='col-6 hidden' id="h_9">
                    <a href='#' data-menu='menu-option-9'><img id="pix_9" width='300' height='330' class='img-fluid rounded-sm shadow-xl'></a>
                </div>
            </div>
        </div>
        <div id="load_gallery" style="float:right" class="spinner-border mb-4 mr-4 color-green-dark" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>



    <div class="card card-style" id="subjects">
        <div class="content">
            <p class="mb-n1 color-highlight font-600 font-12">Upload</p>
            <h4>Your Gallery</h4>
            <div class="input-style input-style-2 input-required">
                <span>Enter Title</span>
                <em>(required)</em>
                <input type="name" id="txtTitle" class="form-control" maxlength="120" placeholder="Title of Gallery" />
            </div>
            <div class="divider"></div>
            <div class="input-style input-style-2 input-required">
                <span>Description</span>
                <em>(required)</em>
                <input type="name" id="txtDescribe" class="form-control" maxlength="120" placeholder="Describe the event" />
            </div>
            <div class="divider"></div>
            <div class="file-data">
                <img src="/images/empty.png" id="preview">
                <input id="fileinput" type="file" class="upload-file bg-highlight shadow-s rounded-s " accept="image/*">
                <p id="up" class="upload-file-text color-white">Upload Image</p>
            </div>

            <div class="divider"></div>
            <div class="d-flex justify-content-center">
                <div id="pro_create" class="spinner-border color-green-dark hidden" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>

        </div>

    </div>

</div>

