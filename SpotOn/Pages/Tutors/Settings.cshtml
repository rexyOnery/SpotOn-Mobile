@page
@model MeetSpotOn.Pages.Tutors.SettingsModel
@{
    //Layout = "~/Pages/Shared/_TutorLayout.cshtml";
}

<div class="page-content">

    <div class="card card-style bg-28" data-card-height="40vh">
        <div class="card-top">
            <a href="#" class="btn btn-s border-white color-white float-right mt-2 mr-2 rounded-sm"><i class="fa fa-camera pr-2"></i>Upload </a>
        </div>
        <div class="card-bottom ml-3 mr-3">
            <h1 class="font-40 line-height-xl color-white">Jane<br>Louder</h1>
            <p class="color-white opacity-60"><i class="fa fa-map-marker mr-2"></i>San Francisco, California</p>
            <p class="color-white opacity-80 font-15">
                Jane loves listening to really loud music, hanging  out with friends and partying on the weeends!
            </p>
        </div>
        <div class="card-overlay bg-gradient"></div>
    </div>

    <div class="card card-style">
        <div class="content">
            <p class="mb-n1 color-highlight font-600 font-12">Edit your Account</p>
            <h4>Basic Information</h4>
            <p>
                Public information that shows on top of your card in your profile page. This is just a dummy page.
            </p>

            <div class="mt-5 mb-3">
                <div class="input-style input-style-2 mb-3 pb-1">
                    <span class="input-style-1-active">Title</span>
                    <em>(required)</em>
                    <select id="slc_title">
                        <option value="Mr.">Mr.</option>
                        <option value="Mrs.">Mrs.</option>
                        <option value="Master">Master</option>
                        <option value="Miss">Miss</option>
                    </select>
                </div>
                <div class="input-style input-style-2 mb-3 pb-1">
                    <span class="input-style-1-active">Class Category</span>
                    <em>(required)</em>
                    <select id="slc_category" onchange="javascript: SlcCategoryChange();">
                    </select>
                </div>
                <div class="input-style input-style-2 mb-3 pb-1" id="primary_select">
                    <span class="input-style-1-active">Class</span>
                    <em>(required)</em>
                    <select id="slc_class">
                    </select>
                </div>

                <div class="input-style input-style-2 mb-3 pb-1">
                    <span class="input-style-1-active">State</span>
                    <em>(required)</em>
                    <select id="state" onchange="javascript: getLocalAreas();">
                    </select>
                </div>
                <div class="input-style input-style-2 mb-3 pb-1">
                    <span class="input-style-1-active">Local Area</span>
                    <em>(required)</em>
                    <select id="lga">
                    </select>
                    <div id="local_empty" class="hidden mb-1">
                    </div>
                </div>
                <div class="input-style input-style-2 mb-3 pb-1">
                    <span class="input-style-1-active">Location</span>
                    <em>(required)</em>
                    <input type="name" id="location" placeholder="Enter your location. Only keywords, e.g Wuse 2" />
                </div>


            </div>

        </div>
    </div>

    <div class="card card-style" id="subjects">
        <div class="content">
            @*<p class="mb-n1 color-highlight font-600 font-12">Enter</p>
            <h4>Your Subjects</h4>
            <p>
                Enter the subject(s) you teaches seperated by comma. For example: Mathematics, English, Physical Science.
                Ensure that you spell the subjects correctly for Spot-On search to be able find you.
            </p>

            <div class="divider"></div>
            <div class="input-style input-style-2 input-required">
                <span>Enter your subjects</span>
                <em>(required)</em>
                <textarea id="txtSubject" class="form-control" placeholder=""></textarea>
            </div>
            <div class="divider"></div>*@
            <p>
                Enter a brief about yourself (max. 120 characters) telling parents about your experinces. For example: I hold a Bsc degree from SpotOn Academy with 5 years of teaching experience.
            </p>
            <div class="input-style input-style-2 input-required">
                <span>Enter your briefs</span>
                <em>(required)</em>
                <textarea id="txtBrief" class="form-control" maxlength="120" placeholder=""></textarea>
            </div>
            <div class="divider"></div>
            <div class="d-flex justify-content-center">
                <div id="procreate" class="spinner-border color-green-dark hidden" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <a href="javascript:UpdateTutorSettings();" id="btnUpdateTutorSettings" class="btn btn-full btn-m gradient-highlight rounded-s font-13 font-600 ">Save Information</a>

        </div>

    </div>

</div>
<!-- Page content ends here-->

<div id="menu-warning-error"
     class="menu menu-box-modal bg-red-dark rounded-m"
     data-menu-height="310"
     data-menu-width="350">
    <h1 class="text-center mt-4"><i class="fa fa-3x fa-times-circle scale-box color-white shadow-xl rounded-circle"></i></h1>
    <h1 class="text-center mt-3 text-uppercase color-white font-700"><span id="warning-title-error"></span></h1>
    <p class="boxed-text-l color-white opacity-70">
        <span id="warningTextError"></span>
    </p>
    <a href="#" class="close-menu btn btn-m btn-center-l button-s shadow-l rounded-s text-uppercase font-600 bg-white color-black">Close</a>
</div>

<div id="menu-warning-text"
     class="menu menu-box-modal rounded-m"
     data-menu-height="140"
     data-menu-width="350">
    <div class="menu-title">
        <i class="fa fa-times-circle float-left mr-3 scale-box ml-3 fa-4x color-red-dark"></i>
        <p class="color-highlight">The task has</p>
        <h1>Failed</h1>
        <a href="#" class="close-menu"><i class="fa fa-times-circle"></i></a>
    </div>
    <div class="content mb-0 mt-0">
        <p class="pr-3 justify-content-center">
            <span id="warningText"></span>
        </p>
    </div>
</div>





