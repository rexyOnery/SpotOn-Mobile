@page
@model SpotOn.Pages.RegisterModel
@{
    ViewData["Title"] = "";
}

<style>
    .hidden {
        display: none;
    }
</style>

<div class="page-content header-clear-medium">

    <div class="card card-style">
        <div class="content">
            @*<h1 class="font-40 font-800 pb-2">Spot<span class="gradient-highlight p-2 mx-1 color-white scale-box d-inline-block rounded-s border-0">On</span></h1>*@
            <p class="font-600 color-highlight mb-n1">Let's start</p>
            <h1 class="font-30">Register</h1>
            <p>
                Enter your credentials below to register new account.
            </p>

            <div class="input-style has-icon input-style-1 input-required">
                <i class="input-icon fa fa-user"></i>
                <span>Login Name</span>
                <em>(required)</em>
                <input type="name" id="username" placeholder="Login Name">
            </div>
            <div class="input-style has-icon input-style-1 input-required">
                <i class="input-icon fa fa-mail-bulk"></i>
                <span>Email Address</span>
                <em>(required)</em>
                <input type="name" id="email" placeholder="Email Address">
            </div>
            <div class="input-style has-icon input-style-1 input-required">
                <i class="input-icon fa fa-lock"></i>
                <span>Password</span>
                <em>(required)</em>
                <input type="password" id="Password" placeholder="Choose Password">
            </div>
            <div class="input-style has-icon input-style-1 input-required">
                <i class="input-icon fa fa-lock"></i>
                <span>Confirm Password</span>
                <em>(required)</em>
                <input type="password" id="cnfPassword" placeholder="Confirm Choosen Password">
            </div>
            <div class="input-style has-icon input-style-1 input-required">
                <i class="input-icon"></i>
                <span>Secret Question</span>
                <select id="secretquestion">
                    <option value="What is your mother's maiden name?"> What is your mother's maiden name?</option>
                    <option value="What was your first pet?"> What was your first pet?</option>
                    <option value="What was the model of your first car?"> What was the model of your first car?</option>
                    <option value="In what city were you born?"> In what city were you born?</option>
                    <option value="What was your father's middle name?"> What was your father's middle name?</option>
                    <option value="What was your childhood nickname?"> What was your childhood nickname?</option>
                </select>
            </div>
            <div class="input-style has-icon input-style-1 input-required">
                <i class="input-icon fa fa-angle-right"></i>
                <span>Secret Answer</span>
                <em>(required)</em>
                <input type="name" id="answer" placeholder="Secret Answer">
            </div>
            <div class="input-style has-icon input-style-1 input-required">
                <i class="input-icon"></i>
                <span>Select Account Type</span>
                <select id="account_type">
                    <option value="0">How do you proceed?</option>
                    <option value="User"> Sign Up As A User</option>
                    <option value="Artisan"> Sign Up As An Artisan</option> 
                </select>
            </div>

            <div class="row mb-5 hidden" id="item-preloader">
                <div class="col-12">
                    <div class="d-flex justify-content-center">
                        <div class="spinner-border color-blue-dark" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
            <a href="javascript:register();" class="show-ios btn btn-full btn-l font-600 font-13 gradient-highlight mt-4 rounded-s">Create Account</a>
            <a href="javascript:register();" class="show-android btn btn-full btn-l font-600 font-13 gradient-highlight mt-4 rounded-s">Create Account</a>

            <div class="row pt-3 mb-3">
                <div class="col-6 text-left">
                    <a href="/forgot" class="color-highlight">Forgot Password?</a>
                </div>
                <div class="col-6 text-right">
                    <a href="/login" class="color-highlight">Login</a>
                </div>
            </div>

        </div>
    </div>


</div>

<div id="snackbar-9" class="snackbar-toast color-white bg-highlight color-white" data-autohide="true"><i class="fa fa-sync fa-spin mr-3"></i>Processing...</div>


<div id="menu-warning-2" class="menu menu-box-bottom rounded-m"
     data-menu-height="185"
     data-menu-effect="menu-over">
    <div class="menu-title">
        <i class="fa fa-times-circle float-left mr-3 scale-box ml-3 fa-4x color-red-dark"></i>
        <p class="color-highlight">The task has</p>
        <h1>Failed</h1>
        <a href="#" class="close-menu"><i class="fa fa-times-circle"></i></a>
    </div>
    <div class="content mt-0 mb-0">
        <p class="pr-3" id="msg">

        </p>
    </div>
</div>

<div id="menu-success-2" class="menu menu-box-bottom bg-green-dark rounded-m"
     data-menu-height="335"
     data-menu-effect="menu-over">
    <h1 class="text-center mt-4"><i class="fa fa-3x fa-check-circle scale-box color-white shadow-xl rounded-circle"></i></h1>
    <h1 class="text-center mt-3 font-700 color-white">All's Good</h1>
    <p class="boxed-text-l color-white opacity-70" id="success_msg">
         
    </p>
    <a href="/login" class="btn btn-m btn-center-m button-s shadow-l rounded-s text-uppercase font-600 bg-white color-black">Great, Login!</a>
</div>

<script type="text/javascript" src="~/scripts/UtilityScript.js"></script>
<script type="text/javascript" src="~/js/accountScript.js"></script>
<script type="text/javascript" src="js/site.js"></script>
<script type="text/javascript" src="scripts/jquery.js"></script>
<script type="text/javascript" src="scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="scripts/custom.js"></script>